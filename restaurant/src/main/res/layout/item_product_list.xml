<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp">
<ImageView
    android:id="@+id/id_iv_image"
    android:layout_width="140dp"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:scaleType="centerCrop"
    android:src="@drawable/item_image"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/id_iv_image"
        android:orientation="vertical">
        <TextView
        android:id="@+id/id_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="希尔顿餐厅"
        android:maxLines="1"
        android:textSize="20dp"/>

        <TextView
            android:id="@+id/id_tv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="希尔顿餐厅希尔顿餐厅希尔顿希尔顿餐厅希尔顿餐厅希尔顿"
            android:maxLines="2"
            android:layout_marginTop="2dp"
            android:textSize="15sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/id_tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30元"
        android:textSize="20sp"
        android:layout_alignBottom="@id/id_iv_image"
        android:layout_toRightOf="@id/id_iv_image"
        android:layout_marginLeft="8dp"
        android:textColor="#FF5722"/>
    <ImageView
        android:id="@+id/id_iv_sub"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/sub"
        android:layout_alignBottom="@id/id_iv_image"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"/>
    <TextView
        android:id="@+id/id_tv_count"
        android:layout_width="wrap_content"
        android:layout_height="20sp"
        android:text="1"
        android:textColor="#000000"
        android:layout_alignBottom="@id/id_iv_image"
        android:layout_toLeftOf="@id/id_iv_sub"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp" />
    <ImageView
        android:id="@+id/id_iv_add"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/add"
        android:layout_alignBottom="@id/id_iv_image"
        android:layout_toLeftOf="@id/id_iv_sub"
        android:layout_marginRight="16dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#444444"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>